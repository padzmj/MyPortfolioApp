<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Nanodegree Portifolio"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:id="@+id/firstApp"
        android:text="Spotify Streamer"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appTitle"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:id="@+id/secondApp"
        android:text="Scores App"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/firstApp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:id="@+id/thirdApp"
        android:text="Library App"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/secondApp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:id="@+id/fourthApp"
        android:text="Build it bigger"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/thirdApp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:id="@+id/fifthApp"
        android:text="Bacon Reader"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fourthApp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize"
        android:id="@+id/sixthApp"
        android:text="Capstone: My App"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fifthApp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
